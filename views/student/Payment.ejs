<%- include('../partials/head')%>

<%- include('../partials/topbar')%>

<%- include('../partials/sidebar')%>

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h1>
                            Payment Form  
                        </h1>
                       <h2>
                           <%= msg%>
                       </h2>
                    </div>
                    <form action="/sendfee/<%= user._id%>" method="post">
                        
                    <!-- <img src="<%= user.filepath%>" alt="" height="100" width="100"> -->
                    <div class="body">
                        <div class="row clearfix ">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="email" placeholder="Enter the Email" value="<%= user.email%>" disabled/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="fname" placeholder="First name" value="<%= user.name.split(' ')[0]%>" disabled/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="lname" placeholder="Last name" value="<%= user.name.split(' ')[1]%>" disabled/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <b>Course</b>
                                </p>
                                <select class="form-control show-tick" name="course" disabled>
                                    <option>--select any--</option>
                                    <% if (user.course == 'BCA') {%>
                                        <option value="BCA" selected>BCA</option>
                                        <option value="MCA">MCA</option>
                                        <option value="BBA">BBA</option>
                                        <option value="MBA">MBA</option>
                                    <% } %>
                                    <% if (user.course == 'MCA') {%>
                                        <option value="BCA">BCA</option>
                                        <option value="MCA" selected>MCA</option>
                                        <option value="BBA">BBA</option>
                                        <option value="MBA">MBA</option>
                                    <% } %>
                                    <% if (user.course == 'BBA') {%>
                                        <option value="BCA">BCA</option>
                                        <option value="MCA">MCA</option>
                                        <option value="BBA" selected>BBA</option>
                                        <option value="MBA">MBA</option>
                                    <% } %>
                                    <% if (user.course == 'MBA') {%>
                                        <option value="BCA">BCA</option>
                                        <option value="MCA">MCA</option>
                                        <option value="BBA">BBA</option>
                                        <option value="MBA" selected>MBA</option>
                                    <% } %>
                                    

                                </select>

                            </div>
                            <div class="col-sm-6">
                                <p>
                                    <b>Fees</b>
                                </p>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="lname" placeholder="Last name" value="<%= fees%>" disabled/>
                                    </div>
                                </div>
                            </div>
                            <!-- <div class="col-md-6">
                                <p>
                                    <b>Payment method </b>
                                </p>
                                <select class="form-control show-tick" name="fees">
                                </select>

                            </div> -->
            

                            <!-- <img src="/uploads/faculty/sainitushar239@gamil.com_ID.jpeg" alt="" height="100" width="100"> -->
                           <!-- File Upload | Drag & Drop OR With Click & Choose -->
            <% if(disable) {%>
                <button type="submit" class="btn btn-block btn-lg bg-red waves-effect" style="font-size:20px;font-weight:bolder" disabled>Submit</button>
                <% } else { %>
                <button type="submit" class="btn btn-block btn-lg bg-red waves-effect" style="font-size:20px;font-weight:bolder" >Submit</button>
                    <% } %>
                <!-- #END# File Upload | Drag & Drop OR With Click & Choose -->
                        </div>
                        
                        </div>
                        </form>
                        </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/bottom')%>